@{
    ViewData["Title"] = "Add Task";
}
<h1 class="display-4">Add Tasks</h1>
<br />

<form method="post">
    <input type="hidden" asp-for="TaskId" />

    <label asp-for="Task">Task:</label>
    <input asp-for="Task" /><br />

    <label asp-for="DueDate">Due Date:</label>
    <input asp-for="DueDate" type="date" /><br />

    <label asp-for="Quadrant">Quadrant:</label>
    <select asp-for="Quadrant">
        <option value="I">I</option>
        <option value="II">II</option>
        <option value="III">III</option>
        <option value="IV">IV</option>
    </select><br />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Category c in ViewBag.Categories)
        {
        <option value="@c.CategoryId">@c.CategoryName</option>
        }
    </select><br />

    <label asp-for="Completed">Completed:</label>
    <select asp-for="Completed">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select><br />

    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>

</form>